model UserExample {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Branch {
  id            Int             @id @default(autoincrement())
  name          String
  EnquiryForm   EnquiryForm[]
  admissionForm AdmissionForm[]
}

model EnquiryForm {
  id                Int      @id @default(autoincrement())
  brach_name        Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  student_name      String
  photo             String
  father_name       String
  mother_name       String
  dob               DateTime
  address           String
  father_occupation String
  qualification     String
  mobile_no         String
  email             String
  selected_course   String
  branchId          Int
}

model AdmissionForm {
  id                Int      @id @default(autoincrement())
  brach_name        Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  student_name      String
  photo             String
  father_name       String
  mother_name       String
  dob               DateTime
  address           String
  father_occupation String
  qualification     String
  mobile_no         String
  email             String
  selected_course   String
  branchId          Int
  date_of_joining   DateTime
  date_of_ending    DateTime
  course_fee        Float
  fee_paid          Float
  balance_fee       Float
}

model User {
  id                  Int       @id @default(autoincrement())
  name                String?
  email               String    @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  roles               String
  created_at          DateTime  @default(now())
  updated_at          DateTime  @updatedAt
}
